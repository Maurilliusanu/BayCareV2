<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.subiki.baycare.Initial.ProfViewEdit.UserEditProf"
    android:padding="1dp">


   <LinearLayout
       android:id="@+id/activity_user_mainpage"
       android:layout_width="match_parent"
       android:layout_height="match_parent"

       android:orientation="vertical"
       android:layout_margin="16dp"
       android:padding="2dp"
       android:weightSum="1">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp">

      </RelativeLayout>

      <TextView
          android:text="Aadhar Number"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/aadhar_num"
          android:textSize="16sp"
          android:textColor="@android:color/darker_gray"
          android:layout_margin="10dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="none"
          android:ems="10"
          android:id="@+id/aadhar_input"
          android:padding="11dp"
          android:background="@drawable/layout_bg"
          android:textColor="#fff"
          android:textColorHint="#fff"
          android:textSize="16sp"
          android:elevation="7dp"
          android:layout_marginBottom="10dp" />

      <TextView
          android:text="Name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/user_first_name"
          android:textSize="16sp"
          android:textColor="@android:color/darker_gray"
          android:layout_marginBottom="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginStart="10dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:id="@+id/user_first_name_input"
          android:padding="11dp"
          android:background="@drawable/layout_bg"
          android:textColor="#fff"
          android:textColorHint="#fff"
          android:textSize="16sp"
          android:elevation="7dp"
          android:inputType="none" />
      <TextView
          android:text="Address"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/user_add"
          android:textSize="16sp"
          android:textColor="@android:color/darker_gray"
          android:layout_marginBottom="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginStart="10dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:id="@+id/user_add_input"
          android:padding="11dp"
          android:background="@drawable/layout_bg"
          android:textColor="#fff"
          android:textColorHint="#fff"
          android:textSize="16sp"
          android:elevation="7dp"
          android:inputType="none" />


      <TextView
          android:text="Sex"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/user_sex"
          android:textSize="16sp"
          android:textColor="@android:color/darker_gray"
          android:layout_margin="10dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:id="@+id/user_sex_input"
          android:padding="11dp"
          android:background="@drawable/layout_bg"
          android:textColor="#fff"
          android:textColorHint="#fff"
          android:textSize="16sp"
          android:elevation="7dp"
          android:inputType="none" />

      <TextView
          android:text="Year Of Birth"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/user_dob"
          android:textSize="16sp"
          android:textColor="@android:color/darker_gray"
          android:layout_margin="10dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="none"
          android:ems="10"
          android:id="@+id/user_dob_input"
          android:padding="11dp"
          android:background="@drawable/layout_bg"
          android:textColor="#fff"
          android:textColorHint="#fff"
          android:textSize="16sp"
          android:elevation="7dp" />

      <TextView
          android:text="Age"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/user_age"
          android:textSize="16sp"
          android:textColor="@android:color/darker_gray"
          android:layout_margin="10dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="none"
          android:ems="10"
          android:id="@+id/user_age_input"
          android:padding="11dp"
          android:background="@drawable/layout_bg"
          android:textColor="#fff"
          android:textColorHint="#fff"
          android:textSize="16sp"
          android:elevation="7dp" />

      <TextView
          android:text="Height"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/user_height"
          android:textSize="16sp"
          android:textColor="@android:color/darker_gray"
          android:layout_margin="10dp" />
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:id="@+id/user_height_input"
          android:padding="11dp"
          android:background="@drawable/layout_bg"
          android:textColor="#fff"
          android:textColorHint="#fff"
          android:textSize="16sp"
          android:elevation="7dp"
          android:inputType="text" />

      <TextView
          android:text="Weight"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/user_weight"
          android:textSize="16sp"
          android:textColor="@android:color/darker_gray"
          android:layout_margin="10dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:id="@+id/user_weight_input"
          android:padding="11dp"
          android:background="@drawable/layout_bg"
          android:textColor="#fff"
          android:textColorHint="#fff"
          android:textSize="16sp"
          android:elevation="7dp"
          android:inputType="text" />

      <TextView
          android:text="Blood Group"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/user_bg"
          android:textSize="16sp"
          android:textColor="@android:color/darker_gray"
          android:layout_margin="10dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:id="@+id/user_bg_input"
          android:padding="11dp"
          android:background="@drawable/layout_bg"
          android:textColor="#fff"
          android:textColorHint="#fff"
          android:textSize="16sp"
          android:elevation="7dp"
          android:inputType="none" />

      <TextView
          android:text="Disease"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/user_disease"
          android:textSize="16sp"
          android:textColor="@android:color/darker_gray"
          android:layout_margin="10dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:id="@+id/user_disease_inp"
          android:padding="11dp"
          android:background="@drawable/layout_bg"
          android:textColor="#fff"
          android:textColorHint="#fff"
          android:textSize="16sp"
          android:elevation="7dp"
          android:inputType="none" />








      <android.support.v7.widget.AppCompatButton
          android:id="@+id/user_proceed_button"
          android:layout_width="match_parent"
          android:padding="10dp"
          android:text="@string/go"
          android:elevation="7dp"
          android:background="@drawable/button_bg"
          android:textAlignment="center"
          android:textColor="#fff"
          android:textSize="16sp"
          android:layout_height="40dp"
          android:layout_weight="0.02"
          android:layout_marginTop="10dp" />


   </LinearLayout>

</ScrollView>