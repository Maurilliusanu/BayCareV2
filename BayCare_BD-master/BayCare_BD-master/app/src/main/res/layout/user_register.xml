<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f0f0f0">

    <com.kofigyan.stateprogressbar.StateProgressBar
        android:id="@+id/your_state_progress_bar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:spb_currentStateNumber="one"
        app:spb_maxStateNumber="three"
        app:spb_stateBackgroundColor="#BDBDBD"
        app:spb_stateForegroundColor="#009688"
        app:spb_stateNumberBackgroundColor="#808080"
        app:spb_stateNumberForegroundColor="#eeeeee"
        app:spb_currentStateDescriptionColor="#009688"
        app:spb_stateDescriptionColor="#808080"
        app:spb_animateToCurrentProgressState="true"
        app:spb_checkStateCompleted="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/l1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/qr_scan"
            android:id="@+id/imageView3"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="30dp" />

        <TextView
            android:text="Tap to scan Aadhar QR Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_margin="10dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Get your details"
            android:elevation="7dp"
            android:background="@drawable/button_bg"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_height="40dp"
            android:layout_margin="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/l2">

        <TextView
            android:text="Did we get it right?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="50dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg_2"
            android:elevation="8dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="120dp">

                    <TextView
                        android:text="Aadhar No"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/aadhar"
                        android:layout_margin="10dp"
                        android:textColor="#111" />

                    <TextView
                        android:text="Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#111" />

                    <TextView
                        android:text="YOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/yob"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#111" />

                    <TextView
                        android:text="Sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sex"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#111" />

                    <TextView
                        android:text="Street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView29"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#111" />

                    <TextView
                        android:text="District"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textColor="#111"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:text="State"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/state"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#111" />

                    <TextView
                        android:text="Pin Code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView30"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#111" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:layout_margin="10dp"
                        android:textColor="#aaaaaa"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="8870 8847 1074" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#aaaaaa"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Hariharsudan" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#aaaaaa"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="19-12-1996" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#aaaaaa"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Male" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#aaaaaa"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Puducherry" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#aaaaaa"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="19-12-1996" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#aaaaaa"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="19-12-1996" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#aaaaaa"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="19-12-1996" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/next2"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Yes Proceed !"
            android:elevation="7dp"
            android:background="@drawable/button_bg"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_height="40dp"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/l3">

        <TextView
            android:text="Show us how you look!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_margin="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pro_pic_upload"
                android:elevation="0dp"
                android:background="@drawable/circle"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pro_pic_img"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="135dp"
                android:layout_height="135dp" />

            <android.support.design.widget.FloatingActionButton
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/pro_pic_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:elevation="5dp"
                android:layout_alignBottom="@+id/pro_pic_upload"
                android:layout_alignEnd="@+id/pro_pic_upload"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/next3"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Finish"
            android:elevation="7dp"
            android:background="@drawable/button_bg"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_height="40dp"
            android:layout_margin="10dp" />
    </LinearLayout>
</LinearLayout>



