<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/diagonalLayout"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="227dp"
        android:fitsSystemWindows="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cover_pic"
            diagonal:srcCompat="@drawable/cover_pic"
            android:scaleType="center"
            android:cropToPadding="true"
            android:adjustViewBounds="true" />
        <!--diagonal:srcCompat="@drawable/background"-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_gravity="top|left"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:textSize="24sp"
            android:id="@+id/user_name"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aadhar_num"
            android:layout_marginTop="97dp"
            android:layout_marginLeft="30dp"
            android:textSize="18sp"
            android:textColor="#fff" />

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="230dp"
        android:id="@+id/l1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#3E3E3E"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:id="@+id/hp2"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3E3E3E"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:id="@+id/hp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/diagonalLayout"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginRight="40dp">

            <Button
                android:id="@+id/callnow"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_centerVertical="false"
                android:theme="@style/MyButton"
                android:text="Call now"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                android:padding="10dp" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/l1"
        android:padding="10dp"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg_2"
            android:padding="10dp"
            android:elevation="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="150dp">

                    <TextView
                        android:text="Email ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_margin="2dp"
                        android:textSize="14sp" />

                    <TextView
                        android:text="Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:layout_margin="2dp"
                        android:textSize="14sp" />

                    <TextView
                        android:text="Age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:layout_margin="2dp"
                        android:textSize="14sp" />

                    <TextView
                        android:text="Height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/height"
                        android:layout_margin="2dp"
                        android:textSize="14sp" />

                    <TextView
                        android:text="Weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/weight"
                        android:layout_margin="2dp"
                        android:textSize="14sp" />

                    <TextView
                        android:text="Bood Group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bld"
                        android:layout_margin="2dp"
                        android:textSize="14sp" />
                    <TextView
                        android:text="Disease"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/disease"
                        android:layout_margin="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:layout_margin="2dp"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Waiting for data.." />

                    <TextView
                        android:text="Waiting for data.."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:layout_margin="2dp"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:text="Waiting for data.."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:layout_margin="2dp"
                        android:textSize="14sp" />

                    <TextView
                        android:text="Waiting for data.."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/heightinp"
                        android:textSize="14sp"
                        android:layout_margin="2dp" />

                    <TextView
                        android:text="Waiting for data.."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/weightinp"
                        android:textSize="14sp"
                        android:layout_margin="2dp" />

                    <TextView
                        android:text="Waiting for data.."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bldinp"
                        android:layout_margin="2dp"
                        android:textSize="14sp" />
                    <TextView
                        android:text="Waiting for data.."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/diseaseinp"
                        android:layout_margin="2dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp">

            <TextView
                android:text="Click the above button to track your Activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView38"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_marginTop="10dp" />

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:nestedScrollingEnabled="true"></RelativeLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="173dp"
        android:elevation="15dp"
        android:background="@drawable/circle"
        diagonal:srcCompat="@drawable/fire_logo"
        android:layout_marginStart="39dp"
        android:layout_below="@+id/toolbar"
        android:layout_toEndOf="@+id/toolbar" />

</RelativeLayout>
    </ScrollView>
</RelativeLayout>




