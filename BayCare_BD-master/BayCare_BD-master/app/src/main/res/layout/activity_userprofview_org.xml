<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/diagonalLayout"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="227dp"
        android:fitsSystemWindows="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cover_pic"
            diagonal:srcCompat="@drawable/cover_pic"
            android:scaleType="center"
            android:cropToPadding="true"
            android:adjustViewBounds="true" />
        <!--diagonal:srcCompat="@drawable/background"-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_gravity="top|left"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:textSize="25sp"
            android:id="@+id/user_name"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aadhar_num"
            android:layout_marginTop="97dp"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:textColor="#fff" />

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="230dp"
        android:id="@+id/l1">

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/diagonalLayout"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginRight="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Points"
                android:textColor="#3E3E3E"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5K"
                android:textStyle="bold"
                android:textColor="#3E3E3E"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/l1"
        android:layout_marginTop="30dp"
        android:clipToPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg_2"
            android:padding="7dp"
            android:elevation="5dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="150dp">

                    <TextView
                        android:text="Email ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_margin="2dp"
                        android:textSize="12sp" />

                    <TextView
                        android:text="Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:layout_margin="2dp"
                        android:textSize="12sp" />

                    <TextView
                        android:text="Age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:layout_margin="2dp"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="nadus77@gmail.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:layout_margin="2dp"
                        android:textSize="12sp" />

                    <TextView
                        android:text="Smvec, Pondicherry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:layout_margin="2dp"
                        android:textSize="12sp"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:text="19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:layout_margin="2dp"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="?android:dividerHorizontal"
                android:showDividers="middle"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout2"
                android:padding="2dp">

                <TextView
                    android:text="Suggest Food Pattern"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/ic_action_food"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:singleLine="true" />

                <TextView
                    android:text="Suggest Medicines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/ic_action_meds"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:singleLine="true" />

                <TextView
                    android:text="Analyse Sleep Pattern"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/ic_action_sleep"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:singleLine="true" />

                <TextView
                    android:text="Patinet Logs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/ic_action_fit"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:singleLine="true" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/totalsuggest"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:text="Submit today Suggestion"
                android:elevation="7dp"
                android:background="@drawable/button_bg"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="173dp"
        android:elevation="15dp"
        android:background="@drawable/circle"
        diagonal:srcCompat="@drawable/fire_logo"
        android:layout_marginStart="39dp"
        android:layout_below="@+id/toolbar"
        android:layout_toEndOf="@+id/toolbar" />

</RelativeLayout>
    </ScrollView>
</RelativeLayout>




