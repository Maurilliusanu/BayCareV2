<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Meal Reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            android:textSize="22sp"
            android:textAlignment="center"
            android:padding="15dp"
            android:textColor="@android:color/holo_green_dark"
            android:elevation="6dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/viewfinder_border">

        <TextView
            android:text="Breakfast Time!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView32"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:textColor="#fff"
            android:textStyle="normal|bold"
            android:layout_marginTop="25dp" />

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/meal_center"
            android:id="@+id/imageView2"
            android:layout_height="240dp"
            android:layout_margin="10dp" />

        <TextView
            android:text="10:00 AM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            android:padding="9dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="28sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/meal_yes"
            android:layout_width="wrap_content"
            android:text="Let's Eat"
            android:elevation="7dp"
            android:background="@drawable/button_bg4"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingEnd="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingStart="30dp"
            android:paddingTop="10dp" />

        <TextView
            android:text="@string/skip_meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView34"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#fff"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>
