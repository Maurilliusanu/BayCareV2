<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Meal Reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            android:textSize="22sp"
            android:textAlignment="center"
            android:padding="15dp"
            android:textColor="@android:color/holo_green_dark"
            android:elevation="6dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/viewfinder_border">

        <TextView
            android:text="Sorry to see that!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView32"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:layout_margin="15dp" />

        <ImageView
            app:srcCompat="@drawable/skip_meal"
            android:id="@+id/imageView2"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="170dp" />

        <TextView
            android:text="Lunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            android:padding="9dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="27sp"
            android:textStyle="normal|bold" />

        <TextView
        android:text="is going to be in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView35"
        android:textSize="27sp"
        android:textAlignment="center"
        android:textColor="#0c8343"
            android:paddingEnd="9dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingStart="9dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="25dp">

            <TextView
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_meal_h"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:padding="9dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/next_meal_m"
                android:layout_marginEnd="15dp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView36"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:padding="9dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/next_meal_m"
                android:layout_marginLeft="20dp" />

            <TextView
                android:text="m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView37"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:padding="9dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp" />

            <TextView
                android:text="40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_meal_m"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:padding="9dp"
                android:textStyle="normal|bold"
                android:layout_marginEnd="27dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/textView37" />

        </RelativeLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:text="Okay"
            android:elevation="7dp"
            android:background="@drawable/button_bg4"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingEnd="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingStart="30dp"
            android:paddingTop="10dp" />

    </LinearLayout>

</LinearLayout>
