<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingTop="16dp"
android:background="#fff"
    android:paddingBottom="16dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/seekbarText"
    android:layout_margin="10dp" />

        <com.tistory.dwfox.dwrulerviewlibrary.view.ScrollingValuePicker
            android:id="@+id/myScrollingValuePicker"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_above="@+id/center"
            android:background="#ec6464"></com.tistory.dwfox.dwrulerviewlibrary.view.ScrollingValuePicker>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="9dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/r1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/ok"
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:text="Confirm Weight"
                    android:elevation="7dp"
                    android:background="#fff"
                    android:layout_height="45dp" />
        </RelativeLayout>
</LinearLayout>